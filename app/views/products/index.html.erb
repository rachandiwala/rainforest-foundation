<h1><center>Total Number of Product (<%= @products.length %>) </center></h1>

<%= link_to "Create a New Product", "/products/new" %>

<% @products.each do |product| %>
<div class="product-list">
<p>
  <%= product.name %>, <%= product.description %> <br>
  $<%= product.formatted_price %> <br><br> Click on the image for full product information:<br><br>
  <%= link_to image_tag(product.url), "/products/#{product.id}" %>
</p>
  </div>
  <% end %>
