<h1><center>Total Number of Product (<%= @products.length %>) </center></h1>

<%= link_to "Create a New Product", "/products/new" %><br><br>

<% @products.each do |product| %>
<div class="product-list">
<p>
  <b><%= product.name %>, <%= product.description %>,   $<%= product.formatted_price %> </b><br> Click on the image for full product information:<br>
  <%= link_to image_tag(product.url), "/products/#{product.id}" %><br><br>
  
</p>
  </div>
  <% end %>
